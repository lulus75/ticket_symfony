{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">

    <h1>Ticket</h1>
    <table class="table table-sm">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ ticket.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ ticket.description }}</td>
            </tr>
            <tr>
                <th>Created the</th>
                <td>{% if ticket.created %}{{ ticket.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ user }}</td>
            </tr>
        </tbody>
    </table><br>

{% if is_granted('ROLE_ADMIN') %}

            {{ form_start(delete_form) }}
                <input type="submit" value="Delete this ticket">
            {{ form_end(delete_form) }}

            <a href="{{ path('ticket_edit', { 'id': ticket.id }) }}"><button>Edit this ticket</button></a>

{% endif %}


        {% include 'message/show.html.twig' %}

        {% include 'message/new.html.twig' %}


    <br><br>
    <a href="{{ path('ticket_index') }}"><button>Back to the list</button></a>
   </div>
</div>

{% endblock %}
